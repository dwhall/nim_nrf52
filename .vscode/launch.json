{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BMP nRF52",
      "type": "cortex-debug", // Requires Cortex-Debug extension (marus25.cortex-debug)
      "request": "launch",

      "servertype": "external",
      "gdbTarget": "COM5", // Adjust this to your BMP's COM port

      "executable": "${workspaceFolder}/build/c2lora.elf",
      "device": "nRF52",
      "interface": "swd",

      "runToEntryPoint": "Reset_Handler",
      "svdFile": "${workspaceFolder}deps/svd/nrf52840.svd",

      "gdbPath": "arm-none-eabi-gdb",

      "overrideLaunchCommands": [
        "file build/c2lora.elf",
        "monitor swd_scan",
        "attach 1",
        "load",
        // For RTT support, install ms-vscode.vscode-serial-monitor extension
        // and configure a serial monitor to connect to the RTT port (the COM
        // port not used by the entended-remote connection)
        "monitor rtt ram 0x20000000 0x20040000",
        "monitor rtt channel 0",
        "monitor rtt enable",
        "monitor rtt cb"
      ]
    }
  ]
}